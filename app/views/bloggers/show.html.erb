
<div class="row">
    <%= render(partial: 'user_nav') %>
  <div class="col s12">
    <h4 class="center"><%= current_user.first_name %> <%= current_user.last_name %>
                                            <%= image_tag(current_user.image.url(:thumb))%></h4>
      <h5><%= current_user.bio %></h5>
  </div>

  <div class="col s12 m8 offset-m2">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="card">
          <div class="card-content">
            <span class="card-title"><%= link_to post.title, post_path(current_user, post) %></span>
              <p class="truncate"><%= post.content %></p>
          </div>
          <div class="card-action">
            <% if post.user_id == current_user.id %>
            <a href="#">This is a link</a>
            <a href="#">This is a link</a>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

