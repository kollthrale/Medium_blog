<div class="row">

  <div class="col s12 m8 l9">
    <div class="col s2">

    </div>
    <div class="col s11">
      <h4 class="black-text"><%= current_user.first_name current_user.last_name %></h4>
      <% if current_user.bio.present? %>
        <%= current_user.bio %>
      <%end%>

      <% if @posts.any? %>
        <% @posts.each do |post| %>
      <ul>
        <li><%= link_to post.title, blogger_post_path(current_user, post) %></li>
        <%end%>
      <% else %>
        <h5><%= link_to 'Write Post', new_blogger_post_path(current_user) %></h5>
      <%end%>
    </div>
  </div>

</div>
